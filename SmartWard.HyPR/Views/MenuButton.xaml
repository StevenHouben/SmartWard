<Custom:SurfaceButton x:Class="SmartWard.HyPR.Views.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:Custom="http://schemas.microsoft.com/surface/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="Image"  Width="75" Source="{Binding ImageSourceString, UpdateSourceTrigger=PropertyChanged}"></Image>
                <Label x:Name="Label" Content="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Foreground="White"></Label>
            </StackPanel>   
</Custom:SurfaceButton>
