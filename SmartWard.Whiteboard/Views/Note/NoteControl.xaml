<UserControl x:Class="SmartWard.Whiteboard.Views.Note.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:my="http://schemas.microsoft.com/surface/2008" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="410">
    <Grid Background="Lavender">
        <Label Content="Note" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Background="LightGoldenrodYellow"/>
        <my:SurfaceTextBox MaxWidth="280" Text="{Binding Note.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,45,10,56" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.CanContentScroll="True"/>
        <my:SurfaceButton Content="Save" Height="40" Margin="170,358,10,10" Click="BtnSave_Click"/>
        <my:SurfaceButton Content="Cancel" Height="40" Margin="10,358,170,10" Click="BtnCancel_Click"/>
    </Grid>
</UserControl>
