<Window x:Class="SmartWard.PDA.Views.PDAWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="http://schemas.microsoft.com/surface/2008"
        xmlns:controls="clr-namespace:SmartWard.PDA.Views"
        Title="PDAWindow" WindowStyle="None" WindowState="Maximized">
    <DockPanel>
        <Popup IsOpen="{Binding NavigateToVisible}" Placement="Right" HorizontalOffset="-400">
            <Border Width="400" Background="White" BorderThickness="1" BorderBrush="Black">
                <DockPanel>
                    <my:SurfaceButton Width="392" Content="{Binding NavigateToString}" Command="{Binding NavigateToCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></my:SurfaceButton>
                </DockPanel>
            </Border>
        </Popup>
        <Popup IsOpen="{Binding NavigateToPatientsVisible}" Placement="Right" HorizontalOffset="-400">
            <Border Width="400" Background="White" BorderThickness="1" BorderBrush="Black">
                <my:SurfaceListBox ItemsSource="{Binding NavigateToPatients}" MaxHeight="300" Width="392" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="PatientsListBox_SelectionChanged">
                    <my:SurfaceListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type my:SurfaceListBoxItem}">
                            <Setter Property="Margin" Value="0,2,0,2"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0,0,0,0"/>
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="Background" Value="Beige" />
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </my:SurfaceListBox.ItemContainerStyle>
                    <my:SurfaceListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="400" Background="White" BorderThickness="1" BorderBrush="Black">
                                <Label Content="{Binding Name}" FontSize="18" Foreground="Black" VerticalAlignment="Center"></Label>
                            </Border>
                            <!--<my:SurfaceToggleButton VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <my:SurfaceToggleButton.Template>
                                    <ControlTemplate>
                                        <TextBlock Text="{Binding Name}" FontSize="18" Foreground="Black" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </my:SurfaceToggleButton.Template>
                            </my:SurfaceToggleButton>-->
                        </DataTemplate>
                    </my:SurfaceListBox.ItemTemplate>
                </my:SurfaceListBox>
            </Border>
        </Popup>
        <DockPanel x:Name="NotificationBar" DockPanel.Dock="Top" HorizontalAlignment="Stretch" Background="Beige" Visibility="Collapsed">
            <my:SurfaceButton DockPanel.Dock="Left" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="CadetBlue" Foreground="Black" Content="Patients" Width="150" Height="40" Click="PatientsButton_Click" Margin="5,5,5,5"/>
            <controls:NotificationsBar DockPanel.Dock="Right" x:Name="ActivitiesView" DataContext="{Binding}" />
            <StackPanel Orientation="Horizontal">
                <my:SurfaceButton HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="CadetBlue" Foreground="Black" Name="btnMap" FontSize="18" Width="150" Height="40" Click="btnMap_click" Margin="5,5,5,5">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Image Width="40" Height="40" Source="/Images/floor.png"></Image>
                        <TextBlock Name="txtMap" Text="Map"></TextBlock>
                    </StackPanel>
                </my:SurfaceButton>
                <my:SurfaceButton FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="CadetBlue" Foreground="Black" Content="Logout" Width="150" Height="40" Click="LogoutButton_Click" Margin="5,5,5,5"/>
            </StackPanel>
        </DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" FlowDirection="RightToLeft">
            <Border DockPanel.Dock="Bottom" BorderBrush="AliceBlue" BorderThickness="4,4,4,4">
                <my:SurfaceButton MinWidth="100" Background="CadetBlue" Foreground="Black" Content="Exit" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="click_Close" />
            </Border>
        </StackPanel>
        <Popup Name="popup" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid Background="White">
                <Image Source="/Images/ward.jpg"/>
            </Grid>
        </Popup>
        <Frame x:Name="ContentFrame"></Frame>
        <!-- Don't change the order of elements. Dockpanel is kinda fuzzy about this -->
    </DockPanel>
</Window>
